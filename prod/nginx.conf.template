server {
    listen ${PROXY_PORT};

    location /api/ {
        proxy_pass http://${WEBAPP_HOSTNAME}:${WEBAPP_PORT}/;
    }

    location /slack/ {
        proxy_pass http://${BOT_HOSTNAME}:${BOT_PORT}/slack/;
    }

    location / {
        proxy_pass http://${FRONT_HOSTNAME}:${FRONT_PORT};
    }
}
